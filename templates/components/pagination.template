{% if pagination %}
  <ul class="pager">
    {% if pagination.current > 0 %}
      <li class="previous">
        <a href="{{pagination.current-1}}">&larr; Prev</a>
      </li>
    {% endif %}
    {% if pagination.current < pagination.pages %}
      <li class="next">
        <a href="{{pagination.current+1}}">Next &rarr;</a>
      </li>
    {% endif %}
  </ul>
{% endif %}